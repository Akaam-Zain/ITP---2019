
@model Login.Models.login


@{
    ViewBag.Title = "Login";
 
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-form-title" style="background-image: url(images/bg-02.jpg);">
                <span class="login100-form-title-1">
                    Sign In
                </span>
            </div>

            <form class="login100-form validate-form" action="Verify" method="post">

                <div class="wrap-input100 validate-input m-b-26" >
                    <span class="label-input100">Username</span>
                    <input class="input100" type="text" name="username" style="background-image: url(../images/icons/user2.png); background-color:#ffffff; background-repeat:no-repeat ; background-size: 30px; padding-left: 40px"  placeholder="Enter username">
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-18" >
                    <span class="label-input100">Password</span>
                    <input class="input100" type="password" name="password_" style="background-image: url(../images/icons/pass2.png); background-repeat:no-repeat ; background-color:#ffffff;  background-size: 30px; padding-left: 40px" placeholder="Enter password">
                    @Html.ValidationMessageFor(model => model.password_, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                </div>

                <div class="flex-sb-m w-full p-b-30">

                    <div>
                        <a href="#" class="txt1">
                            Forgot Password?
                        </a>
                    </div>

                    <div>
                        <a class="txt1">@Html.ActionLink("Create an Account", "../User/addOrEdit")</a>
                       

                    </div>

                </div>

                <div class="container-login100-form-btn">
                    <input type="submit" value="Login" class="login100-form-btn">
                       
                </div>
                <br />
                <br />
                <div class="login-status">
                    @Html.DisplayFor( model => model.status_)
                </div>

            </form>
        </div>
    </div>
</div>

<style>
    input[type=text]:hover {
        border:none;
    }
</style>

