    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            var oTable = $('#mytable').DataTable({
                "ajax": {
                    "url": '/Search/getUsers',
                    "type": "get",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "regId", "autoWidth": true },
                    { "data": "fname", "autoWidth": true },
                    { "data": "lname", "autoWidth": true },
                    { "data": "email", "autoWidth": true },
                    { "data": "password_", "autoWidth": true },
                    { "data": "age", "autoWidth": true },
                    { "data": "gender", "autoWidth": true },
                    { "data": "ocp", "autoWidth": true },
                    { "data": "weight_", "autoWidth": true },
                    { "data": "height", "autoWidth": true },
                    { "data": "phone", "autoWidth": true },
                    { "data": "address", "autoWidth": true },
                    { "data": "shedule", "autoWidth": true },
                    { "data": "d_plan", "autoWidth": true },
                    { "data": "pay_type", "autoWidth": true },
                    {
                        "data": "regId", "width": "50px", "render": function (data) {
                            return '<a class="popup btn btn-lg btn-outline-danger" href="/Search/viewUser/' + data + '">Delete</a>';
                        }
                    }

                ]

            })
            $('.tablecontainer').on('click', 'a.popup', function (e) {
                e.preventDefault();
                OpenPopup($(this).attr('href'));
            })

            function OpenPopup(pageUrl) {

                var $pageContent = $('<div/>');
                $pageContent.load(pageUrl);


                $dialog = $('<div class="popupWindow" style="overflow:auto"></div>')
                    .html($pageContent)
                    .dialog({
                        draggable: false,
                        autoOpen: false,
                        resizable: false,
                        model: true,
                        title: 'Remove User',
                        height: 550,
                        width: 600,
                        close: function () {
                            $dialog.dialog('destroy').remove();
                        }
                    })

                $('.popupWindow').on('submit', '#popupForm', function (e) {
                    var url = $('#popupForm')[0].action;
                    $.ajax({
                        type: "POST",
                        url: url,
                        data: $('#popupForm').serialize(),
                        success: function (data) {
                            if (data.status) {
                                $dialog.gialog('close');
                                oTable.ajax.reload();
                            }
                        }
                    })
                    e.preventDefault();
                })
                $dialog.dialog('open');

            }

        })
    </script>


</body>
