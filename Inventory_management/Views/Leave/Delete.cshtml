@model Inventory_management.Models.leave

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/adminView/adminEmployee3.cshtml";

}



<div>
    <h4><b>Delete Leave</b></h4>
    <h5>Are you sure you want to delete this?</h5>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Employee ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.empId)
        </dd>

        <dt>
            Reason
        </dt>

        <dd>
            @Html.DisplayFor(model => model.reason)
        </dd>

        <dt>
            From Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fromdate)
        </dd>

        <dt>
            To Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.todate)
        </dd>

        <dt>
            No of Days
        </dt>

        <dd>
            @Html.DisplayFor(model => model.noofdays)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-primary", @style = "color:white" })
        </div>
    }
</div>
