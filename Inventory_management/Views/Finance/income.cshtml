    }

</script>
<script>
    $(document).ready(function () {

        var dataTable = $('#table1').DataTable({});

        $("#incomeForm").validate({
            errorClass: "my-error-class",
            validClass: "my-valid-class",
            rules: {
                date: "required",
                category: "required",
                cash: {
                    number: true,
                    required: true
                },
                pos: {
                    number: true,
                    required: true
                },
                amount: {
                    number: true,
                    required: true
                }
            },
            messages: {
                date: "Date Required!",
                category: "Please Select Category!",
                cash: {
                    number: "Please enter only digits!",
                    required: "Cash required"
                },
                pos: {
                    number: "Please enter only digits!",
                    required: "POS required"
                },
                amount: {
                    number: "Please enter only digits!",
                    required: "Amount required"
                }
            },
            submitHandler: function () {
                var request = {
                    'date': $('#date').val(),
                    'category': $('#category').val(),
                    'cash': $('#cash').val(),
                    'pos': $('#pos').val(),
                    'amount': $('#amount').val()
                };
                $.ajax({
                    type: "POST",
                    url: "/Finance/InsertData",
                    data: request,
                    success: function (data) {
                        $('#date').val("");
                        $('#category').val("");
                        $('#cash').val("");
                        $('#pos').val("");
                        $('#amount').val("");
                        if (data = "success") {
                            swal({
                                title: "Success", text: "Income Added Successful!", type:
                                    "success"
                            }).then(function () {
                                location.reload();
                            }
                            );
                        } else if (data = "error") {
                            swal("Oops", "Something went wrong!", "error");
                        }
                    },
                    failure: function (errMsg) {
                        swal("Error", "Connection Error!", "error");
                    }
                });
            }
        });

        $("#incomeFormEdit").validate({
            errorClass: "my-error-class",
            validClass: "my-valid-class",
            rules: {
                date_edit: "required",
                category_edit: "required",
                cash_edit: {
                    number: true,
                    required: true
                },
                pos_edit: {
                    number: true,
                    required: true
                },
                amount_edit: {
                    number: true,
                    required: true
                }
            },
            messages: {
                date_edit: "Date Required!",
                category_edit: "Please Select Category!",
                cash_edit: {
                    number: "Please enter only digits!",
                    required: "Cash required"
                },
                pos_edit: {
                    number: "Please enter only digits!",
                    required: "POS required"
                },
                amount_edit: {
                    number: "Please enter only digits!",
                    required: "Amount required"
                }
            },
            submitHandler: function () {
                var request = {
                    'id': $('#edit_id').val(),
                    'date': $('#date_edit').val(),
                    'category': $('#category_edit').val(),
                    'cash': $('#cash_edit').val(),
                    'pos': $('#pos_edit').val(),
                    'amount': $('#amount_edit').val()
                };
                $.ajax({
                    type: "POST",
                    url: "/Finance/editIncome",
                    data: request,
                    success: function (data) {
                        $('#edit_id').val("");
                        $('#date_edit').val("");
                        $('#category_edit').val("");
                        $('#cash_edit').val("");
                        $('#pos_edit').val("");
                        $('#amount_edit').val("");
                        if (data = "success") {
                            popupEdit.style.display = "none";
                            swal({
                                title: "Success", text: "Income Edit Successful!", type:
                                    "success"
                            }).then(function () {
                                location.reload();
                            }
                            );
                        } else if (data = "error") {
                            swal("Oops", "Something went wrong!", "error");
                        }
                    },
                    failure: function (errMsg) {
                        swal("Error", "Connection Error!", "error");
                    }
                });
            }
        });

        $("#incomeForm").submit(function (e) {
            e.preventDefault();
        });

        $("#incomeFormEdit").submit(function (e) {
            e.preventDefault();
        });

    });

    function editData(id) {

        var date = '#row_date_' + id;
        var category = '#row_category_' + id;
        var cash = '#row_cash_' + id;
        var pos = '#row_pos_' + id;
        var total = '#row_total_' + id;

        popupEdit.style.display = "block";

        $('#date_edit').val($(date).val());
        $('#category_edit').val($(category).val());
        $('#cash_edit').val($(cash).val());
        $('#pos_edit').val($(pos).val());
        $('#amount_edit').val($(total).val());
        $('#edit_id').val(id);

    }

    function deleteIncome(id) {

        swal({
            title: "Are You Sure?",
            text: "If You Want Delete This!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    var data = {
                        'id': id
                    };
                    $.ajax({
                        type: "POST",
                        url: "/Finance/incomeDelete",
                        data: data,
                        success: function (data) {
                            if (data = "success") {
                                swal({
                                    title: "Success", text: "Income Delete Successful!", type:
                                        "success", animation: true
                                }).then(function () {
                                    location.reload();
                                }
                                );
                            } else if (data = "error") {
                                swal("Oops", "Something went wrong!", "error");
                            }
                        },
                        failure: function (errMsg) {
                            swal("Error", "Connection Error!", "error");
                        }
                    });
                }
            });

    }
</script>