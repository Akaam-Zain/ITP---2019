@model IEnumerable<Inventory_management.Models.bill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/adminView/payment3.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bill Payment Index</title>
</head>
<body>
    <br />
    <div class="container-fluid ">
        <center>  <h2 class="text-danger">Payment Management (Bill)</h2></center>
        <a href="@Url.Action("Create")" class="btn btn-success">Create New</a>
        <div class="form-group" style="float:right">
            <div class="input-group">
                <input type="text" placeholder="Search" id="Search" aria-label="Search" class="form-control" />
            </div>
        </div>
    </div>
    <br>
    <p>
        @Html.ActionLink("Export Order Listing ", "ExportBillListing")
    </p>
    <table class="table">
        <tr class="Search">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment_Date)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="Search">
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payment_Date)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.billId }, new { @class = "btn btn-primary", @style = "text-decoration:none;color:white;" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.billId }, new { @class = "btn btn-dark", @style = "text-decoration:none;color:white;" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.billId }, new { @class = "btn btn-danger", @style = "text-decoration:none;color:white;" })
                </td>
            </tr>
        }

    </table>
</body>
</html>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {

        function Contains(text_one, text_two) {
            if (text_one.indexOf(text_two) != -1)
                return true;
        }


        $("#Search").keyup(function () {
            var searchText = $("#Search").val().toLowerCase();
            $(".Search").each(function () {

                if (!Contains($(this).text().toLowerCase(), searchText)) {
                    $(this).hide();
                }
                else {

                    $(this).show();
                }
            });

        });

    });

</script>