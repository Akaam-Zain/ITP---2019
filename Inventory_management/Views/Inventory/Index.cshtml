@model IEnumerable<Inventory_management.Models.inventory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/adminView/admin.cshtml";
}

<div class="col-lg-12 text-white">
    <div class="container">
        <br>
        <div class="container">
            <center>  <h2 class="text-danger">Inventory Management</h2></center>
            <br /><br />
            <div class="col-4" style="float:right">
                <input type="text" placeholder="Search" id="Search" aria-label="Search" class="form-control" />
            </div>

        </div>
        <p>
            <button type="button" class="btn btn-success">
                @Html.ActionLink("Create New", "Create", null, new { style = "text-decoration:none;color:white" })
            </button>
            <button class="btn btn-info"> @Html.ActionLink("Re-Order", "Reorder", null, new { style = "text-decoration:none;color:white" })</button>
            <a href="@Url.Action("ExportOrderListing")" class="btn btn-primary">Generate Report</a>

        </p>

        <table class="table">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.itemCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.purchased_date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.supplier)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.catergory)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="Search">

                    <td>
                        @Html.DisplayFor(modelItem => item.itemCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.image)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.purchased_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.supplier)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.catergory)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.itemCode }, new { @class = "btn btn-success", @style = "color:white" })
                        <!--@Html.ActionLink("Details", "Details", new { id = item.itemCode }) -->
                        @Html.ActionLink("Delete", "Delete", new { id = item.itemCode }, new { @class = "btn btn-danger", @style = "color:white" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
        </div>
    </div>


</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {

        function Contains(text_one, text_two) {
            if (text_one.indexOf(text_two) != -1)
                return true;
        }


        $("#Search").keyup(function () {
            var searchText = $("#Search").val().toLowerCase();
            $(".Search").each(function () {

                if (!Contains($(this).text().toLowerCase(), searchText)) {
                    $(this).hide();
                }
                else {

                    $(this).show();
                }
            });

        });

    });

</script>

