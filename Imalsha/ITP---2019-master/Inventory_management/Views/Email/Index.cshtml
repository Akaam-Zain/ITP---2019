@model Inventory_management.Models.Email

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/adminView/admin.cshtml";
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>


<body>
    <center>
        <br />
        <h2 class="text-danger">Email To Supplier</h2>
    </center>
    <div>
        @using (Html.BeginForm("Index", "Email", FormMethod.Post, new { enctype = "multi/form-data" }))
        {

            <table >
                <tr>
                    <td style="width:90px;" >
                        To:
                    </td>
                    <td >@Html.TextBoxFor(model => model.To)</td>
                </tr>

                <tr>
                    <td style="width:90px;">
                        Subject:
                    </td>
                    <td>@Html.TextBoxFor(model => model.Subject)</td>
                </tr>

                <tr>
                    <td style="width:100px;">
                        Subject:
                    </td>
                    <td>@Html.TextAreaFor(model => model.Body, new { rows = "15", cols = "50" })</td>
                </tr>

                <tr>
                    <td>
                        <input type="submit" value="Send" />
                    </td>

                </tr>



            </table>
        }



    </div>
</body>
</html>
